
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check for admin or agent role
    function isStaff() {
      return request.auth.token.role == 'admin' || request.auth.token.role == 'agent';
    }

    // Helper function to check if the user is an admin
    function isAdmin() {
      return request.auth.token.role == 'admin';
    }

    // Publicly readable data
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /results/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /historical_results/{docId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // User-specific data
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isStaff();
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isStaff();
      allow delete: if isAdmin();
    }
    
    // Bets can be read by the user who placed them, their agent, or an admin
    match /bets/{betId} {
      allow read: if request.auth.uid == resource.data.userId || request.auth.uid == resource.data.agentId || isAdmin();
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update, delete: if isAdmin(); // Only admins can modify/delete bets post-creation
    }

    // Transactions can be read by the sender, receiver, or an admin
    match /transactions/{txId} {
        allow read: if request.auth.uid == resource.data.fromId || request.auth.uid == resource.data.toId || isAdmin();
        allow create: if request.auth.uid != null; // Server-side logic handles creation
        allow update, delete: if isAdmin();
    }
    
    // Withdrawal and Deposit requests
    match /{collection}/{requestId} {
      allow read: if request.auth.uid == resource.data.userId || request.auth.uid == resource.data.agentId || isAdmin();
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update: if isStaff();
      allow delete: if isAdmin();
    }
  }
}
